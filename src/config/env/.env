# Application Settings
APP_NAME=BabelGenerated
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Server Settings
PORT=8000
HOST=0.0.0.0

# Database Settings
DB_CONNECTION=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=babel_db
DB_USERNAME=postgres
DB_PASSWORD=password

# Security Settings
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging Settings
LOG_LEVEL=debug
LOG_PATH=/var/log/babel

# Cache Settings
CACHE_DRIVER=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail Settings
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# File Storage Settings
STORAGE_DRIVER=local
STORAGE_PATH=/var/www/storage

# API Settings
API_VERSION=v1
API_PREFIX=/api